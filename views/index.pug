extends defaults/layout.pug
include defaults/mixins.pug
block content
    .container
        .card__preview
            .card__preview-front
                .card__preview--chip
                .card__preview--logos
                    .card__preview--logo.card__preview--logo-visa
                    .card__preview--logo.card__preview--logo-mastercard
                .card__preview--number
                  .card__preview--number-static #### #### #### ####
                  .card__preview--number-animated #### #### #### ####
                .card__preview--bottom
                    .card__preview--holder
                        .label Card Holder
                        .value AD SOYAD
                    .card__preview--expiry
                        .label Expires
                        .value 
                          .expiry-container
                            .month-container
                              .current-month MM
                            span.expiry-separator /
                            .year-container
                              .current-year YY
                .focus-frame
            .card__preview-back
                .cvv-strip •••
                .cvv-label CVV
                .back-logo-container
                  .card__preview--logo.back-visa-logo
                  .card__preview--logo.back-mastercard-logo
        .card__form
            .form-group
                label Card Number
                input#card_number.card__form--input(type="text" placeholder="" maxlength="19")
            .form-group
                label Card Name
                input#card_holder.card__form--input(type="text" placeholder="" maxlength="24")
            .form-row
                .form-group
                    label Expiration Date
                    .input-selects
                        select#card__form--select.selectArrow
                            option(value="" selected) Month
                            option(value="01") 01
                            option(value="02") 02
                            option(value="03") 03
                            option(value="04") 04
                            option(value="05") 05
                            option(value="06") 06
                            option(value="07") 07
                            option(value="08") 08
                            option(value="09") 09
                            option(value="10") 10
                            option(value="11") 11
                            option(value="12") 12
                        select#card_year.selectArrow
                            option(value="" selected) Year
                            option(value="2024") 2024
                            option(value="2025") 2025
                            option(value="2026") 2026
                            option(value="2027") 2027
                            option(value="2028") 2028
                            option(value="2029") 2029
                            option(value="2030") 2030
                .form-group.cvv-group
                    label CVV
                    input#card_cvv.card__form--input(type="text" maxlength="3" pattern="[0-9]{3}")
            button.card__form--submit Submit